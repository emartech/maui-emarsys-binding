<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.PushPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Set Push Token"
                SemanticProperties.Hint="Set Push Token"
                Clicked="OnSetPushTokenClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Clear Push Token"
                SemanticProperties.Hint="Clear Push Token"
                Clicked="OnClearPushTokenClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Push Token"
                SemanticProperties.Hint="Get Push Token"
                Clicked="OnGetPushTokenClicked"
                HorizontalOptions="Fill" />

            <BoxView HeightRequest="1" Color="Grey"/>

            <Button
                Text="Request Location Permission"
                SemanticProperties.Hint="Request Location Permission"
                Clicked="OnRequestLocationPermissionClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Geofence Set InitialEnterTriggerEnabled"
                SemanticProperties.Hint="Geofence Set InitialEnterTriggerEnabled"
                Clicked="OnGeofenceSetInitialEnterTriggerEnabledClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Geofence Enable"
                SemanticProperties.Hint="Geofence Enable"
                Clicked="OnGeofenceEnableClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Geofence Disable"
                SemanticProperties.Hint="Geofence Disable"
                Clicked="OnGeofenceDisableClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Geofence Get IsEnabled"
                SemanticProperties.Hint="Geofence Get IsEnabled"
                Clicked="OnGeofenceGetIsEnabledClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Geofence Get Registered Geofences"
                SemanticProperties.Hint="Geofence Get Registered Geofences"
                Clicked="OnGeofenceGetRegisteredGeofencesClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
