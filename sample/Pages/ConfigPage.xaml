<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sample.ConfigPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                Text="Set Contact" 
                SemanticProperties.Hint="Set Contact"
                Clicked="OnSetContactClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Clear Contact"
                SemanticProperties.Hint="Clear Contact"
                Clicked="OnClearContactClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Track Custom Event"
                SemanticProperties.Hint="Track Custom Event"
                Clicked="OnTrackCustomEventClicked"
                HorizontalOptions="Fill" />

            <BoxView HeightRequest="1" Color="Grey"/>

            <Button
                Text="Change Application Code"
                SemanticProperties.Hint="Change Application Code"
                Clicked="OnChangeApplicationCodeClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Change Merchant Id"
                SemanticProperties.Hint="Change Merchant Id"
                Clicked="OnChangeMerchantIdClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Application Code"
                SemanticProperties.Hint="Get Application Code"
                Clicked="OnGetApplicationCodeClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Merchant Id"
                SemanticProperties.Hint="Get Merchant Id"
                Clicked="OnGetMerchantIdClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Client Id"
                SemanticProperties.Hint="Get Client Id"
                Clicked="OnGetClientIdClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Language Code"
                SemanticProperties.Hint="Get Language Code"
                Clicked="OnGetLanguageCodeClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Sdk Version"
                SemanticProperties.Hint="Get Sdk Version"
                Clicked="OnGetSdkVersionClicked"
                HorizontalOptions="Fill" />
            <Button
                Text="Get Contact Field Id"
                SemanticProperties.Hint="Get Contact Field Id"
                Clicked="OnGetContactFieldIdClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
