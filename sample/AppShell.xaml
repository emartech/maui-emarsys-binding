<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sample"
    Shell.FlyoutBehavior="Disabled"
    Title="Sample">

    <TabBar>
        <ShellContent
            Title="Config"
            Icon="gear.png"
            ContentTemplate="{DataTemplate local:ConfigPage}" />
        <ShellContent
            Title="Push"
            Icon="message.png"
            ContentTemplate="{DataTemplate local:PushPage}" />
        <ShellContent
            Title="InApp"
            Icon="note.png"
            ContentTemplate="{DataTemplate local:InAppPage}" />
        <ShellContent
            Title="Predict"
            Icon="tag.png"
            ContentTemplate="{DataTemplate local:PredictPage}" />
    </TabBar>

</Shell>
